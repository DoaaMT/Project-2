<h1><%= current_user.email %>'s Products</h1>


<table class="table table-hover">
  <thead>
    <tr>
      <th scope="col">  Name  </th>
      <th scope="col">  Price  </th>
      <th scope="col">  Img  </th>
      <th scope="col">  Description  </th>
      <th scope="col">  Stock  </th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.price %> SR</td>
        <td><%= image_tag(product.img , size: "100x100", alt: "product Image") %></td>
        <td><%= product.description %></td>
        <td><%= product.stock %></td>
        <td>
        <div class="btn btn-danger"  role="group" aria-label="Basic example">
        <%= link_to 'Edit', edit_product_path(product) , :class => "btn btn-danger" %>  |
        <%= link_to 'Destroy', product, method: :delete, data: {  confirm: 'Are you sure?'} , :class => "btn btn-danger" %> 
        </div> </td>
      </tr>
   <% end %>
  </tbody>
</table>

<br>

<div class="btn btn-danger"  role="group" aria-label="Basic example">
<%= link_to 'New product', new_product_path , :class => "btn btn-danger" %>  |
<%= link_to 'Back', products_path, :class => "btn btn-danger" %> 
</div>

