
<table class="table table-hover">
  <thead>
    <tr>
      <th scope="col">  Name  </th>
      <th scope="col">  Price  </th>
      <th scope="col">  Img  </th>
      <th scope="col">  Description  </th>
      <th scope="col">  Stock  </th>
      <th scope="col">  Show  </th>

    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr> 
        <td><%= product.name %></td>
        <td><%= product.price %> SR</td>
        <td><%= image_tag(product.img , size: "150x180", alt: "product Image") %></td>
        <td><%= product.description %></td>
        <td><%= product.stock %></td>
        <td><%= link_to 'Show', product ,  :class => "btn btn-danger"  %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<div class="btn btn-danger"  role="group" aria-label="Basic example">
<%= link_to 'Add a new product', new_product_path , :class => "btn btn-danger" %> |
<%= link_to 'Show your products', "products/showit/:id", :class => "btn btn-danger" %>  |
<%= link_to 'Show your Orders', "orders" , :class => "btn btn-danger" %> 
</div>
