
<table class="striped bordered">
  <thead>
    <tr>
      <th>  Name  </th>
      <th>  Price  </th>
      <th>  Img  </th>
      <th>  Description  </th>
      <th>  Stock  </th>

    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.price %></td>
        <td><%= image_tag(product.img , size: "100x130", alt: "product Image") %></td>
        <td><%= product.description %></td>
        <td><%= product.stock %></td>
        <td><%= link_to 'Show', product %></td>
      </tr>
    <% end %>
  </tbody>
</table>

