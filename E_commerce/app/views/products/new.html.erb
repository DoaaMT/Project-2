<%= form_for(@product) do |f| %>
    <p>
      <%= f.label :name, "Product Name" %>
      <%= f.text_field :name %>
    </p>

    <p>
    <%= f.label :price, "Price" %>
    <%= f.text_field :price %>
    </p>

    <p>
    <%= f.label :img, "img" %>
    <%= f.text_field :img %>
    </p>

    <p>
    <%= f.label :description, "description" %>
    <%= f.text_field :description %>
    </p>

    <p>
    <%= f.label :stock, "stock" %>
    <%= f.text_field :stock %>
    </p>

    <p>
      <%= f.submit 'Submit' %>
    </p>   
  <% end %>
  
  <%= link_to 'Back', products_path %>