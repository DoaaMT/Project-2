

<h1>All Your Orders</h1>
<div class='divfo'>

<table class="table table-hover">
  <thead>
    <tr>
      <th scope="col">PRODUCT Id </th>
      <th scope="col">Quantity</th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.product_id %></td>
        <td><%= order.quantity %></td>
        <td>
        <div class="btn btn-danger"  role="group" aria-label="Basic example">
        <%= link_to 'Show', order , :class => "btn btn-danger" %>  |
        <%= link_to 'Destroy', order, method: :delete, data: { confirm: 'Are you sure?' } , :class => "btn btn-danger" %> 
        </div></td>
      </tr>
    <% end %>
  </tbody>
</table>


</div>
<br>

<%= link_to 'Back to product path', products_path, :class => "btn btn-danger" %>